.warning_title
  opacity 0
  position fixed
  width 100%
  margin auto 0
  top 0
  bottom 0
  background-color #666
  text-align center
  display table
  cursor default
  z-index 1000
  height 0

.warning_massage
  color #fff
  font-size 50px
  height 0
  font-weight lighter
  margin auto 0
  user-select none
  display table-cell
  vertical-align middle

html, body
  margin 0

.a-ui
  color #999
  transition all .3s
  text-decoration none
  border-bottom 1px solid #999
  margin 0
  cursor pointer
  &:hover
    color #666
    border-bottom 1px solid #666
    transition all .3s

#nobaidu_dlg
  border 1px solid #888
  background-color #e0e0e0
  color #000
  padding 20px
  position fixed
  margin auto
  top 0
  bottom 0
  left 0
  right 0
  height 160px
  width 500px
  display none


.under_line
  text-decoration none
  color #666
  transition color .3s
  position relative
  &:after
    position absolute
    content ""
    top auto
    bottom 0px
    left 0
    background-color #666
    width 100%
    height 1px
    transform: scaleX(0);
    transition all .5s
  &:hover:after
    transform: scaleX(1);

.search-box
  position fixed
  top 50px
  right 50px
  form
    display inline-block

.placeholder
  .placeholder-massage
    position absolute
    bottom 0
    margin 5px 0
    color #ccc
    font-weight lighter
    font-size 20px
    z-index -1
    user-select none
    transition all .3s
  .placeholder-focus
    bottom 85%
    font-size 16px
    margin 0
    transition all .3s
.text-input
  position relative
  display inline-block

.color-ccc
  color #ccc

.hide
  color white
  a
    color white !important
.truth
  background-color #666
  color #666
  a
    color #666 !important
    transition all 0s
    border none
  &:hover
    color #ccc
    a
      color #7eabd2 !important
      border none
      transition all 0s
.speaker
  display block
  text-align right
  &:before
    font-family Microsoft Yahei
    content "——"
    padding 0 5px
label
  cursor pointer
  vertical-align middle
  display inline-block
  user-select none
  color #888
  transition color .1s
  &:hover
    input
      border-color #ed5f82
      transition all .1s
    color #666
    transition color .1s

.totop
  position fixed
  opacity .4
  background url('/img/totop.png') center center no-repeat
  background-size cover
  width (100px/1.5)
  height (100px/1.5)
  right (-@height)
  bottom 20px
  cursor pointer
  transition all .2s
  @media mini
    transform scale(.8)
.totop-show
  right 20px
  transition all .2s


.bilibili-card-pre.active
  display -webkit-flex
  display flex
  height 100px
  border 1px solid #ccc
  user-select none
  -moz-user-select none
  box-shadow none
  transition border .3s, box-shadow .3s
  margin 16px 0
  &:hover
    border 1px solid #ed5f82
    box-shadow 0 0 5px #ed5f82
    transition border .3s, box-shadow .3s
  a
    all unset
    color #666
    cursor pointer
    transition color .3s
    &:hover
      color #222
      transition color .3s
  .b_-pic
    height 100px
    width 160px
    float left
    img
      height 100%
      width 100%
  .b_-info
    padding 0 10px
    flex 1
    .b_-title
      font-size 20px
      margin-top 10px
      display block
    .b_-play-review
      font-size 14px
      vertical-align middle
      margin 10px 0 5px
      .b_-play
        display inline-block
        margin-right 10px
      .b_-review
        display inline-block
    .b_-type-author
      font-size 14px
      line-height 20px
      vertical-align middle
      .b_-type
        margin-right 10px
        display inline-block
      .b_-face
        height 20px
        width 20px
        vertical-align bottom
        border-radius 50%
      .b_-author
        display inline-block
    i.b_-icon
      width 15px
      height 100%
      display inline-block
      opacity .5
      vertical-align middle
      padding-right 3px

