@keyframes ripple
  to
    opacity 0
    transform scale(2)

.ripple
  position relative
  overflow hidden
  span.ripple-span
    opacity .3
    position absolute
    display inline-block
    border-radius 100%
    transform scale(0)
    background-color #000
    animation ripple 1s
    cursor pointer
    z-index -1
    margin -50%

@keyframes fade-in-5
  to
    opacity .5
.show-fade-in-5
  animation fade-in-5 .5s
  animation-fill-mode forwards
    
@keyframes fade-in
  to
    opacity 1
.show-fade-in
  animation fade-in .5s
  animation-fill-mode forwards
    
@keyframes fade-out
  to
    opacity 0
.show-fade-out
  animation fade-out .5s
  animation-fill-mode forwards

  
