<div class="tag-cloud">
	<p class="cloud-title"><%= __('tags') %></p>
	<div class="items">
	<% site.tags.sort('name').each(function(item){ %>
  	<a href="<%- url_for(item.path) %>" title="<%= item.name %>" class="cloud-item"><%= item.name %><sup><%= item.posts.length %></sup></a>
	<% }); %></div>
</div>